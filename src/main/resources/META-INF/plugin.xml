<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.mholzer85.generateobjectid</id>
    <name>Generate ObjectId</name>
    <vendor email="mholzer85@gmail.com" url="https://github.com/mholzer85">Mathias Holzer</vendor>

    <description><![CDATA[
    Generates new MongoDB / Bson ObjectIds.
    Generated ObjectId can either be put directly into an open file in the editor or copied to the clipboard.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <actions>
        <action
                id="GenerateObjectIdToEditorAction"
                class="com.github.mholzer85.generateobjectid.actions.GenerateObjectIdToEditorAction"
                text="Generate ObjectId and paste to editor"
                description="Paste a new ObjectId in the current editor"
                icon="AllIcons.Json.Object">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
        <action
                id="GenerateObjectIdToClipboardAction"
                class="com.github.mholzer85.generateobjectid.actions.GenerateObjectIdToClipboardAction"
                text="Generate ObjectId and copy to clipboard"
                description="Copy a new ObjectId to the clipboard"
                icon="AllIcons.Actions.Copy">
            <add-to-group group-id="ToolsMenu" relative-to-action="GenerateObjectIdToEditorAction" anchor="after"/>
            <add-to-group group-id="EditorPopupMenu" relative-to-action="GenerateObjectIdToEditorAction"
                          anchor="after"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
    </extensions>

    <applicationListeners>
    </applicationListeners>
</idea-plugin>
